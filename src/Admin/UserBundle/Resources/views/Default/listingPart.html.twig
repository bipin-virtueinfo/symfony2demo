{% include '::hiddenPart.html.twig' %}
{% include '::searchPart.html.twig' %}

<div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th></th>
            <th>{{ 'Firstname' }}</th>
            <th>{{ 'Lastname' }}</th>
            <th>{{ 'Email' }}</th>
            <th>{{ 'Updated At' }}</th>
            <th>{{ "Action" }}</th>
        </tr>
        </thead>
        <tbody>
            {% if listObject|length > 0 %}
                {% for object in listObject %}
                <tr>
                    <td></td>
                    <td>{{ object.firstname }}</td>
                    <td>{{ object.lastname }}</td>
                    <td>{{ object.email }}</td>
                    <td>{{ object.updated|date("Y-m-d H:i:s") }}</td>
                    <td><a href="{{ path('add_user') }}?id={{ object.id }}">{{ "Edit" }}</a></td>
                </tr>
                {% endfor %}
          {% else %}
              <tr>
                <td colspan="7"><div class="alert alert-info">No records found.</div></td>
              </tr>
          {% endif %}
            <tr>
              <td colspan="7"><a href="{{ path('add_user') }}">{{ "Add user" }}</a></td>
            </tr>
        </tbody>
    </table>

    <div id="listing_paging">
        {% include '::paging.html.twig' with {'listObject' : listObject} %}
    </div>
</div>