{% extends '::base.html.twig' %}

{% block title %}
{{ "Add new category" }}
{% endblock %}

{% block body %}
    {% set ssurl = path('add_category') ~ ((app.request.query.get('id') != '') ? "?id="~app.request.query.get('id') : '')  %}
    <form action="{{ ssurl }}" method="post" novalidate="true" class="form-horizontal well" {{ form_enctype(form) }}>
        <fieldset>
            <legend>{{ (app.request.query.get('id') != '') ? "Edit category" : "Add category" }}</legend>
            <table>
                <tr>
                    <td>{{ form_label(form.title) }}</td>
                    <td>{{ form_widget(form.title) }}</td>
                    <td> <div class="alert-error">{{ form_errors(form.title) }}</div></td>
                </tr>
                <tr>
                    <td>{{ form_label(form.parent) }}</td>
                    <td>{{ form_widget(form.parent) }}</td>
                    <td> <div class="alert-error">{{ form_errors(form.parent) }}</div></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td><input type="submit" value="{{ (app.request.query.get('id') != '') ? "Update" : 'Save' }}" class="btn btn-primary"/>&nbsp;<a href="{{ path('category_list')}}" class="btn">Cancel</a></td>
                </tr>
            </table>
        </fieldset>
    </form>
{% endblock %}